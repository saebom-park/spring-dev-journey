<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "<http://mybatis.org/dtd/mybatis-3-mapper.dtd>">

<mapper namespace="com.springlab13.practice.OrderMapper">
    <select id="findAll" resultType="com.springlab13.practice.Order">
        SELECT * FROM orders
    </select>

    <select id="findById" resultType="com.springlab13.practice.Order" parameterType="int">
        SELECT * FROM orders WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.springlab13.practice.Order">
        INSERT INTO orders (item_name, price)
        VALUES (#{item_name}, #{price})
    </insert>
</mapper>