<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.saebom.bulletinboard.repository.CommentMapper">

    <sql id="commentColumns">
        id,
        article_id,
        member_id,
        content,
        created_at,
        updated_at
    </sql>

    <resultMap id="commentResultMap" type="com.saebom.bulletinboard.domain.Comment">
        <id property="id" column="id"/>
        <result property="articleId" column="article_id"/>
        <result property="memberId" column="member_id"/>
        <result property="content" column="content"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <insert id="insert"
            parameterType="com.saebom.bulletinboard.domain.Comment"
            useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO comments (
            article_id,
            member_id,
            content
        )
        VALUES (
            #{articleId},
            #{memberId},
            #{content}
        )
    </insert>

    <select id="findById"
            parameterType="long"
            resultMap="commentResultMap">
        SELECT
        <include refid="commentColumns"/>
        FROM comments
        WHERE id = #{id}
    </select>

    <select id="findByArticleId"
            parameterType="long"
            resultMap="commentResultMap">
        SELECT
        <include refid="commentColumns"/>
        FROM comments
        WHERE article_id = #{articleId}
        ORDER BY created_at ASC
    </select>

    <select id="findByMemberId"
            parameterType="long"
            resultMap="commentResultMap">
        SELECT
        <include refid="commentColumns"/>
        FROM comments
        WHERE member_id = #{memberId}
        ORDER BY created_at DESC
    </select>

    <update id="update"
            parameterType="com.saebom.bulletinboard.domain.Comment">
        UPDATE comments
        SET content = #{content}
        WHERE id = #{id}
    </update>

    <delete id="deleteById"
            parameterType="long">
        DELETE FROM comments
        WHERE id = #{id}
    </delete>

</mapper>