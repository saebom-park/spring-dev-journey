<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.review41.repository.ProductMapper">
    <resultMap id="ProductResultMap" type="com.review41.dto.ProductResponseDto">
        <result property="name" column="product_name"/>
        <result property="price" column="product_price"/>
        <result property="categoryName" column="category_name"/>
    </resultMap>
    <select id="findByKeyword" resultMap="ProductResultMap" parameterType="String">
        SELECT
            p.product_name, p.product_price, c.category_name
        FROM products p
        JOIN categories c ON p.category_id = c.id
        WHERE p.product_name LIKE CONCAT('%', #{keyword}, '%')
    </select>
</mapper>